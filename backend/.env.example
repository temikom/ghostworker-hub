# GhostWorker Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=GhostWorker
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# Generate SECRET_KEY with: openssl rand -hex 32
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# ===========================================
# SERVER
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
API_V1_PREFIX=/api/v1

# Frontend URL (for email links, CORS, etc.)
FRONTEND_URL=https://yourdomain.com
VITE_API_URL=https://yourdomain.com

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=ghostworker
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ghostworker
DATABASE_URL=postgresql://ghostworker:your_secure_password_here@db:5432/ghostworker
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===========================================
# REDIS & CELERY
# ===========================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ===========================================
# AUTHENTICATION (JWT)
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# ===========================================
# AI SERVICES (OpenAI)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# PAYMENT (STRIPE)
# ===========================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=GhostWorker
SMTP_FROM_EMAIL=noreply@ghostworker.com

# ===========================================
# MESSAGING INTEGRATIONS
# ===========================================

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API (Direct)
WHATSAPP_BUSINESS_ID=your_whatsapp_business_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_verify_token

# Meta (Facebook/Instagram)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_VERIFY_TOKEN=your-verify-token
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# TikTok
TIKTOK_APP_ID=your-tiktok-app-id
TIKTOK_APP_SECRET=your-tiktok-app-secret

# ===========================================
# N8N INTEGRATION (OPTIONAL)
# ===========================================
N8N_BASE_URL=http://n8n:5678
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=https://your_sentry_dsn

# ===========================================
# FLOWER (CELERY MONITORING)
# ===========================================
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# ===========================================
# DATA RETENTION
# ===========================================
MESSAGE_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=730
WEBHOOK_RETENTION_DAYS=30
